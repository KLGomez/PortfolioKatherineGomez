@ts-nocheck
---
let isOpen = false;

---

<nav class="site-nav px-6 py-4 relative z-50">
  <div class="flex justify-between items-center">
    <!-- Botón hamburguesa -->
    <button
      class="md:hidden"
      on:click={() => (isOpen = !isOpen)}
      aria-label="Abrir menú"
      aria-expanded={isOpen}
    >
      <div class="flex flex-col gap-1">
        <span class="w-6 h-0.5 bg-white rounded"></span>
        <span class="w-6 h-0.5 bg-white rounded"></span>
        <span class="w-6 h-0.5 bg-white rounded"></span>
      </div>
    </button>
    <!-- Logo si querés poner uno -->
    <a href="#" class="font-bold text-lg text-gradient text-gradient-hover"
      >KathyDev</a
    >
  </div>

  <!-- Menú colapsado -->
  <div
    class={`md:flex md:items-center md:justify-center ${isOpen ? "block" : "hidden"}`}
  >
    <ul
      class="flex flex-col md:flex-row gap-4 mt-4 md:mt-0 text-gradient text-gradient-hover font-semibold text-center"
    >
      <li><a href="#about-me" class="hover:text-purple-300">Sobre mí</a></li>
      <li><a href="#projects" class="hover:text-purple-300">Proyectos</a></li>
      <li><a href="#contact" class="hover:text-purple-300">Contacto</a></li>

      <!-- Switch dark mode dentro del menú -->
      <li class="flex justify-center">
        <label class="relative inline-block w-14 h-7 cursor-pointer">
          <input type="checkbox" id="dark-mode-toggle" class="sr-only" />
          <span
            class="slider absolute inset-0 bg-gradient-kathy rounded-full flex items-center justify-between px-1 text-xs text-white transition-all shadow-md"
          >
            <i class="fa-solid fa-sun icon-sun"></i>
            <i class="fa-solid fa-moon icon-moon"></i>
            <span
              class="dot absolute top-[2px] left-[2px] h-6 w-6 bg-white rounded-full transition-transform"
            ></span>
          </span>
        </label>
      </li>
    </ul>
  </div>
</nav>

<style>
  .slider .dot {
    transition: transform 0.3s ease;
  }
  #dark-mode-toggle:checked + .slider .dot {
    transform: translateX(100%);
  }
</style>
