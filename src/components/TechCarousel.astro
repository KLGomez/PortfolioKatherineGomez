---
import { Fragment } from 'astro/jsx-runtime';
---

<section class="tech-slider py-4 overflow-hidden relative">
  <div class="slider-track flex gap-8 whitespace-nowrap animate-scroll">
    {Array(2).fill(0).map(() => (
      <Fragment>
        <i class="devicon-javascript-plain text-3xl text-gradient text-gradient-hover" title="JavaScript"></i>
        <i class="devicon-react-original text-3xl text-gradient text-gradient-hover" title="React"></i>
        <i class="devicon-angularjs-plain text-3xl text-gradient text-gradient-hover" title="Angular"></i>
        <i class="devicon-astro-plain text-3xl text-gradient text-gradient-hover" title="Astro"></i>
        <i class="devicon-nodejs-plain text-3xl text-gradient text-gradient-hover" title="Node.js"></i>
        <i class="devicon-mongodb-plain text-3xl text-gradient text-gradient-hover" title="MongoDB"></i>
        <i class="devicon-mysql-plain text-3xl text-gradient text-gradient-hover" title="MySQL"></i>
        <i class="devicon-docker-plain text-3xl text-gradient text-gradient-hover" title="Docker"></i>
        <i class="devicon-git-plain text-3xl text-gradient text-gradient-hover" title="Git"></i>
        <i class="devicon-cypressio-plain text-3xl text-gradient text-gradient-hover" title="Cypress"></i>
        <i class="devicon-postman-plain text-3xl text-gradient text-gradient-hover" title="Postman"></i>
        <i class="devicon-selenium-plain text-3xl text-gradient text-gradient-hover" title="Selenium"></i>
      </Fragment>
    ))}
  </div>
</section>

<style>
@layer utilities {
  .tech-slider {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }

  .slider-track {
    display: inline-block;
    animation: scroll 55s linear infinite;
  }

  .slider-track i {
    margin: 0 2rem;
    font-size: 3rem;
    transition: transform 0.3s ease, color 0.3s ease;
    padding: 0 1rem;
    cursor: pointer;
  }

  .slider-track i:hover {
    transform: scale(1.4);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
}
</style>
